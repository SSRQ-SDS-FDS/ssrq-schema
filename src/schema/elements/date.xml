  <constraintSpec scheme="schematron" ident="sch-data-custom" mode="add">
    <desc versionDate="2023-05-05" xml:lang="en">Schematron rules for att.datable.custom</desc>
    <constraint>
      <sch:pattern>
        <sch:rule context="tei:date[not(ancestor::tei:publicationStmt)][@when-custom|@from-custom|@to-custom|@notBefore-custom|@notAfter-custom]">
          <sch:assert test=".[@calendar]">The attribute @calendar is required, when
                        <sch:name/>
                        is used outside the publicationStmt.
                    </sch:assert>
        </sch:rule>
        <sch:rule context="tei:date[ancestor::tei:publicationStmt]">
          <sch:assert test=".[@type][@type/data(.) = ('electronic', 'print')]">If
                        <sch:name/>
                        is part of the publicationStmt it must contain @type with a value of
                        electronic or print.
                    </sch:assert>
          <sch:assert test=".[@when-custom][not(@calendar|@dur-iso|@from-custom|@to-custom|@notAfter-custom|@notBefore-custom|@period)]">
                        If
                        <sch:name/>
                        is part of the publicationStmt it must contain @when-custom and may not contain
                        @calendar, @dur-iso, @from-custom, @to-custom, @notAfter-custom, @notBefore-custom or
                        @period.
                    </sch:assert>
          <sch:assert test="string-length(normalize-space(.)) = 0 and not(child::*)">
                        If
                        <sch:name/>
                        is part of the publicationStmt it must not have any content.
                    </sch:assert>
        </sch:rule>
      </sch:pattern>
    </constraint>
  </constraintSpec>
  <attList>
    <attDef ident="dur-iso" mode="change">
      <desc xml:lang="de" versionDate="2023-05-09">Erfassung Zeitspanne
                nach <ref target="https://de.wikipedia.org/wiki/ISO_8601#Zeitspannen">ISO 8601</ref>.
                Beginnt mit dem Kürzel P (Periode) gefolgt von arabischen Ziffern. Sich
                wiederholende Zeitspannenden werden im vollen Format ausgedrückt und beginnen mit
                dem Kürzel R (Repeated). Ansonsten werden folgende Werte vergeben
                <list><item>Y = year</item><item>M = month</item><item>W = week</item><item>D = day</item><item>H = hour</item></list>
            </desc>
      <desc xml:lang="en" versionDate="2023-05-09">Recording period according
                to <ref target="https://de.wikipedia.org/wiki/ISO_8601#Zeitspannen">ISO 8601</ref>.
                Begins with the abbreviation P (Period) followed by Arabic numerals. Repeating time
                spans are expressed in full format and begin with the abbreviation R (Repeated).
                Otherwise, the following values are assigned
                <list><item>Y = year</item><item>M = month</item><item>W = week</item><item>D = day</item><item>H = hour</item></list>
            </desc>
      <desc xml:lang="fr" versionDate="2023-05-09">Saisie Période
                selon <ref target="https://de.wikipedia.org/wiki/ISO_8601#Zeitspannen">ISO 8601</ref>.
                Commence par l'abréviation P (période) suivie de chiffres arabes. Les périodes
                répétitives sont exprimées au format complet et commencent par l'abréviation R
                (Repeated). Sinon, les valeurs suivantes sont attribuées
                <list><item>Y = year</item><item>M = month</item><item>W = week</item><item>D = day</item><item>H = hour</item></list>
            </desc>
      <desc xml:lang="it" versionDate="2023-05-09">Acquisizione dell'intervallo di tempo
                secondo <ref target="https://de.wikipedia.org/wiki/ISO_8601#Zeitspannen">ISO 8601</ref>.
                Inizia con l'abbreviazione P (periodo) seguita da numeri arabi. Le terminazioni dell'intervallo
                di tempo ripetitivo sono espresse in formato completo e iniziano con l'abbreviazione R (ripetuto).
                Altrimenti vengono assegnati i seguenti valori
                <list><item>Y = year</item><item>M = month</item><item>W = week</item><item>D = day</item><item>H = hour</item></list>
            </desc>
      <datatype>
        <dataRef name="string" restriction="(R/)?P(\d+(\.\d+)?[YMWDH])+"/>
      </datatype>
    </attDef>
    <attDef ident="period" mode="change">
      <datatype>
        <rng:choice>
          <rng:ref name="ssrq.period.days"/>
          <rng:ref name="ssrq.period.seasons"/>
        </rng:choice>
      </datatype>
    </attDef>
    <attDef ident="type" mode="replace">
      <desc xml:lang="de" versionDate="2023-05-12">Nähere Charakterisierung einer Datierung –
                wird für Termine und Fristen verwendet sowie für Art der Publikation
            </desc>
      <desc xml:lang="en" versionDate="2023-05-12">More detailed characterisation of a dating
                - used for dates and deadlines as well as for type of publication
            </desc>
      <desc xml:lang="fr" versionDate="2023-05-12">Caractérisation plus détaillée d'une
                datation - utilisée pour les dates et les délais ainsi que pour le type de
                publication
            </desc>
      <desc xml:lang="it" versionDate="2023-05-12">Ulteriore caratterizzazione di una data -
                utilizzata per date e scadenze nonché per il tipo di pubblicazione
            </desc>
      <valList type="closed">
        <valItem ident="deadline">
          <desc xml:lang="de">Termin/Frist</desc>
          <desc xml:lang="en">period</desc>
          <desc xml:lang="fr">délai</desc>
          <desc xml:lang="it">scadenza</desc>
        </valItem>
        <valItem ident="deadline_floating_holiday">
          <desc xml:lang="de">beweglicher Feiertag als Termin/Frist</desc>
          <desc xml:lang="en">floating holiday (deadline)</desc>
          <desc xml:lang="fr">des fêtes sans date fixe comme délai</desc>
          <desc xml:lang="it">festività religiose senza una data fissa come scadenza</desc>
        </valItem>
        <valItem ident="deadline_holiday">
          <desc xml:lang="de">Kirchenfest als Termin/Frist</desc>
          <desc xml:lang="en">feast day (period)</desc>
          <desc xml:lang="fr">des fêtes religieuses comme délai</desc>
          <desc xml:lang="it">festività religiose come scadenza</desc>
        </valItem>
        <valItem ident="electronic">
          <desc xml:lang="de">elektronische Publikation</desc>
          <desc xml:lang="en">electronic publication</desc>
          <desc xml:lang="fr">publication numérique</desc>
          <desc xml:lang="it">pubblicazione digitale</desc>
        </valItem>
        <valItem ident="floating_holiday">
          <desc xml:lang="de">beweglicher Feiertag</desc>
          <desc xml:lang="en">floating holiday</desc>
          <desc xml:lang="fr">des fêtes sans date fixe</desc>
          <desc xml:lang="it">festività senza una data fissa</desc>
        </valItem>
        <valItem ident="holiday">
          <desc xml:lang="de">Kirchenfest</desc>
          <desc xml:lang="en">feast day</desc>
          <desc xml:lang="fr">des fêtes religieuses</desc>
          <desc xml:lang="it">festività religiose</desc>
        </valItem>
        <valItem ident="print">
          <desc xml:lang="de">Druck</desc>
          <desc xml:lang="en">print</desc>
          <desc xml:lang="fr">imprimé</desc>
          <desc xml:lang="it">stampa</desc>
        </valItem>
      </valList>
    </attDef>
