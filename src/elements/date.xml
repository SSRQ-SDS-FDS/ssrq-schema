<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="http://jenkins.tei-c.org/job/TEIP5-dev/lastSuccessfulBuild/artifact/P5/release/xml/tei/odd/p5.nvdl" type="application/xml" schematypens="http://purl.oclc.org/dsdl/nvdl/ns/structure/1.0"?>
<elementSpec xmlns="http://www.tei-c.org/ns/1.0" ident="date" module="linking" mode="change"
    xmlns:rng="http://relaxng.org/ns/structure/1.0"
    xmlns:sch="http://purl.oclc.org/dsdl/schematron">
    <desc xml:lang="de" versionDate="2023-05-08">Erfassung (sämtlicher) Datumsangaben im Text.
        Achtung: <ref target="https://www.ssrq-sds-fds.ch/wiki/Datierungsrichtlinien">
        Datierungsrichtlinien</ref> beachten. Datierungen in Quelltexten (Originaldatum) werden
        hingegen mit <gi>origDate</gi> ausgezeichnet.</desc>
    <desc xml:lang="fr" versionDate="2023-05-08">Saisie de (toutes) les dates dans le texte.
        Attention : respecter <ref target="https://www.ssrq-sds-fds.ch/wiki/Datierungsrichtlinien">les
        directives de datation</ref>. Les datations dans les textes sources (date d'origine) sont
        par contre marquées par <gi>origDate</gi>.</desc>
    <desc xml:lang="en" versionDate="2023-05-08">Record (all) dates in the text. Attention: <ref
            target="https://www.ssrq-sds-fds.ch/wiki/Datierungsrichtlinien">Pay attention to dating
        guidelines</ref>. Dates in source texts (original date), on the other hand, are marked with <gi>
        origDate</gi>.</desc>
    <classes mode="replace">
        <memberOf key="macro.dateLike"/>
        <memberOf key="model.publicationStmtPart.detail"/>
        <memberOf key="att.datable"/>
        <memberOf key="att.duration.iso"/>
        <memberOf key="att.typed"/>
    </classes>
    <content>
        <rng:zeroOrMore>
            <rng:ref name="ssrq.content.default"/>
        </rng:zeroOrMore>
    </content>
    <constraintSpec scheme="schematron" ident="sch-data-custom" mode="add">
        <desc versionDate="2023-05-05" xml:lang="en">Schematron rules for att.datable.custom</desc>
        <constraint>
            <sch:pattern>
                <sch:rule context="tei:date[not(ancestor::tei:publicationStmt)][@when-custom|@from-custom|@to-custom|@notBefore-custom|@notAfter-custom]">
                    <sch:assert
                        test=".[@datingMethod]">The attribute @datingMethod is required, when <sch:name/>
                        is used outside of the publicationStmt.</sch:assert>
                </sch:rule>
            </sch:pattern>
        </constraint>
    </constraintSpec>
    <attList>
        <attDef ident="dur-iso" mode="change">
            <desc xml:lang="de" versionDate="2023-05-09">Erfassung Zeitspanne nach <ref
                    target="https://de.wikipedia.org/wiki/ISO_8601#Zeitspannen">ISO 8601</ref>.
                Beginnt mit dem Kürzel P (Periode) gefolgt von arabischen Ziffern. Sich
                wiederholende Zeitspannenden werden im vollen Format ausgedrückt und beginnen mit
                dem Kürzel R (Repeated). Ansonsten werden folgende Werte vergeben <list>
                    <item>Y = year</item>
                    <item>M = month</item>
                    <item>W = week</item>
                    <item>D = day</item>
                    <item>H = hour</item>
                </list></desc>
            <desc xml:lang="en" versionDate="2023-05-09">Recording period according to <ref
                    target="https://de.wikipedia.org/wiki/ISO_8601#Zeitspannen">ISO 8601</ref>.
                Begins with the abbreviation P (Period) followed by Arabic numerals. Repeating time
                spans are expressed in full format and begin with the abbreviation R (Repeated).
                Otherwise, the following values are assigned <list>
                    <item>Y = year</item>
                    <item>M = month</item>
                    <item>W = week</item>
                    <item>D = day</item>
                    <item>H = hour</item>
                </list></desc>
            <desc xml:lang="fr" versionDate="2023-05-09">Saisie Période selon <ref
                    target="https://de.wikipedia.org/wiki/ISO_8601#Zeitspannen">ISO 8601</ref>.
                Commence par l'abréviation P (période) suivie de chiffres arabes. Les périodes
                répétitives sont exprimées au format complet et commencent par l'abréviation R
                (Repeated). Sinon, les valeurs suivantes sont attribuées <list>
                    <item>Y = year</item>
                    <item>M = month</item>
                    <item>W = week</item>
                    <item>D = day</item>
                    <item>H = hour</item>
                </list></desc>
            <datatype>
                <dataRef name="string" restriction="(R/)?P(\d+(\.\d+)?[YMWDH])+"/>
            </datatype>
        </attDef>
    </attList>
    <exemplum type="ssrq-doc-example" versionDate="2023-05-07">
        <p xml:lang="de">Beispielhafte Datierung auf den 03. März 1631</p>
        <p xml:lang="fr">Exemple de datation au 03 mars 1631</p>
        <egXML xmlns="http://www.tei-c.org/ns/Examples">
            <date datingMethod="Gregorian" when-custom="1631-03-03">März, 03, 1631</date>
        </egXML>
    </exemplum>
    <exemplum type="ssrq-doc-example" versionDate="2023-05-07">
        <p xml:lang="de">Beispielhafte Auszeichnung ca. 1510</p>
        <p xml:lang="fr">Exemple de distinction vers 1510</p>
        <egXML xmlns="http://www.tei-c.org/ns/Examples">
            <date datingMethod="Julian" notBefore-custom="1510-01-01"
                to-custom="1515-12-31">ca. 1510</date>
        </egXML>
    </exemplum>
    <exemplum type="ssrq-doc-example" versionDate="2023-05-07">
        <p xml:lang="de">Beispielhafte Auszeichnung des Zeitraums Pfingsten 1583 bis Pfingsten 1584</p>
        <p xml:lang="fr">Exemple de distinction de la période allant de la Pentecôte 1583 à la
            Pentecôte 1584</p>
        <egXML xmlns="http://www.tei-c.org/ns/Examples">
            <date datingMethod="Julian" from-custom="1583-05-30"
                to-custom="1584-05-21">von Pfingstmontag 1583 bis Pfingstmontag 1584</date>
        </egXML>
    </exemplum>
</elementSpec>
