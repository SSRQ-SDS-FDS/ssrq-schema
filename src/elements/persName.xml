    <xi:include href="examples.xml" xpointer="ex-persName-en-2"/>
    <xi:include href="examples.xml" xpointer="ex-persName-fr-2"/>
    <xi:include href="examples.xml" xpointer="ex-persName-it-2"/>
    <xi:include href="examples.xml" xpointer="ex-persName-de-3"/>
    <xi:include href="examples.xml" xpointer="ex-persName-en-3"/>
    <xi:include href="examples.xml" xpointer="ex-persName-fr-3"/>
    <xi:include href="examples.xml" xpointer="ex-persName-it-3"/>
</elementSpec>
