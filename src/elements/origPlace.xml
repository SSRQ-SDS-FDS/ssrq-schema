<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="http://jenkins.tei-c.org/job/TEIP5-dev/lastSuccessfulBuild/artifact/P5/release/xml/tei/odd/p5.nvdl" type="application/xml" schematypens="http://purl.oclc.org/dsdl/nvdl/ns/structure/1.0"?>
<elementSpec xmlns="http://www.tei-c.org/ns/1.0" ident="origPlace" module="msdescription"
    mode="change"
    xmlns:rng="http://relaxng.org/ns/structure/1.0"
    xmlns:sch="http://purl.oclc.org/dsdl/schematron">
    <desc xml:lang="de" versionDate="2023-05-16">Zeichnet den Ausstellungsort innerhalb eines
        transkribierten Dokuments aus. Bei Drucken wird der Druckort damit ausgezeichnet. Mit <att>
        ref</att> wird mit einer ID (locNNNNNN) auf den Ort in der Ortsdatenbank verwiesen, in der
        alle Angaben zu einem Ort zu finden sind.</desc>
    <desc xml:lang="fr" versionDate="2023-05-16">Marque le lieu d'exposition dans un document
        transcrit. Lors de l'impression, le lieu d'impression est ainsi marqué. Avec <att>ref</att>,
        un ID (locNNNNN) renvoie au lieu dans la base de données des lieux, dans laquelle se
        trouvent toutes les données relatives à un lieu.</desc>
    <desc xml:lang="en" versionDate="2023-05-16">Indicates the place of issue within a transcribed
        document. When printing, the print location is marked with it. With <att>ref</att>, an ID
        (locNNNNN) is used to refer to the location in the location database, where all information
        about a location can be found.</desc>
    <classes mode="replace">
        <memberOf key="model.pPart.msdesc"/>
        <memberOf key="att.canonical"/>
    </classes>
    <content>
        <rng:oneOrMore>
            <rng:ref name="ssrq.content.default"/>
        </rng:oneOrMore>
    </content>
    <constraintSpec scheme="schematron" ident="sch-el-origPlace">
        <desc xml:lang="en" versionDate="2023-05-16">Constraint for tei:origPlace</desc>
        <constraint>
            <sch:pattern>
                <sch:rule context="tei:origPlace[parent::tei:origin]">
                    <sch:assert test=".[@*] or string-length(normalize-space(string())) > 0">If <sch:name/>
                        is part tei:origin, it must have an attribute or a text node.</sch:assert>
                </sch:rule>
            </sch:pattern>
        </constraint>
    </constraintSpec>
    <attList>
        <attDef ident="key" mode="delete"/>
        <attDef ident="ref" mode="change" module="att.canonical">
            <desc xml:lang="de" versionDate="2023-03-28">Verknüpfung des Ortes mit der ID der
                Ortsdatenbank. </desc>
            <desc xml:lang="en" versionDate="2023-03-28">Linking the place with the ID of the
                database of places. </desc>
            <desc xml:lang="fr" versionDate="2023-03-28">Relier le lieu à l'ID de la base de données
                des lieux. </desc>
            <datatype>
                <dataRef key="ssrq.pointer.places"/>
            </datatype>
        </attDef>
    </attList>
    <exemplum type="ssrq-doc-example" versionDate="2023-05-16">
        <p xml:lang="de">Auszeichnung eines Druckorts</p>
        <p xml:lang="fr">Distinction d'un lieu d'impression</p>
        <egXML xmlns="http://www.tei-c.org/ns/Examples">
            <lb/>Getruckt zuͦ <origPlace>Zürich</origPlace>
        </egXML>
    </exemplum>
    <exemplum type="ssrq-doc-example" versionDate="2023-05-16">
        <p xml:lang="de">Als Teil des Header</p>
        <p xml:lang="fr">Dans le cadre de l'en-tête</p>
        <egXML xmlns="http://www.tei-c.org/ns/Examples">
            <history>
                <!-- ... -->
                <origin>
                    <origPlace>Rheineck</origPlace>
                </origin>
            </history>
        </egXML>
    </exemplum>
</elementSpec>
