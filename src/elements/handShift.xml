<elementSpec xmlns="http://www.tei-c.org/ns/1.0" ident="handShift" module="transcr" mode="change">
    <gloss xml:lang="de" versionDate="2023-03-15">Handwechsel</gloss>
    <desc xml:lang="de" versionDate="2023-03-15">
        <gi>handShift</gi>
        gibt den Wechsel einer Hand an.
    </desc>
    <gloss xml:lang="en" versionDate="2023-03-15">Change of hands</gloss>
    <desc xml:lang="en" versionDate="2023-03-15"><gi>handShift</gi>indicates the change of a hand.
    </desc>
    <gloss xml:lang="fr" versionDate="2023-03-15">Changement de main</gloss>
    <desc xml:lang="fr" versionDate="2023-03-15"><gi>handShift</gi>indique le changement d'une main.
    </desc>
    <classes mode="replace">
        <memberOf key="att.handFeatures"/>
    </classes>
    <content>
        <empty/>
    </content>
    <attList>
        <attDef ident="scribe" mode="change" usage="req"/>
        <attDef ident="medium" mode="delete"/>
        <attDef ident="new" mode="delete"/>
    </attList>
    <exemplum type="ssrq-doc-example" versionDate="2023-03-15">
        <p xml:lang="de">Wechsel einer Hand / des Schreibers</p>
        <p xml:lang="fr">Changement d'une main / du scribe</p>
        <egXML xmlns="http://www.tei-c.org/ns/Examples">
            <handShift scribe="persID"/>
        </egXML>
    </exemplum>
    <exemplum type="ssrq-doc-example" versionDate="2023-04-28">
