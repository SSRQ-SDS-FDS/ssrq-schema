<?xml version="1.0" encoding="UTF-8"?>
<?xml-model
        href="http://jenkins.tei-c.org/job/TEIP5-dev/lastSuccessfulBuild/artifact/P5/release/xml/tei/odd/p5.nvdl"
        type="application/xml"
        schematypens="http://purl.oclc.org/dsdl/nvdl/ns/structure/1.0"?>
<elementSpec xmlns="http://www.tei-c.org/ns/1.0"
             ident="settlement"
             module="namesdates"
             mode="change">
    <desc xml:lang="de" versionDate="2023-07-11">Erfassung eines Siedlungsnamens (Standort des
        Archivs) innerhalb von <gi>msIdentifier</gi>.
    </desc>
    <desc xml:lang="en" versionDate="2023-07-11">Recording of a settlement name (location of the
        archive) within <gi>msIdentifier</gi>.
    </desc>
    <desc xml:lang="fr" versionDate="2023-07-11">Saisie d'un nom d'établissement (localisation des
        archives) au sein de <gi>msIdentifier</gi>.
    </desc>
    <desc xml:lang="it" versionDate="2023-07-11">Inserire un nome di struttura (posizione
        dell'archivio) all'interno di <gi>msIdentifier</gi>.
    </desc>
    <classes mode="replace">
        <memberOf key="att.canonical"/>
        <memberOf key="model.placeNamePart"/>
    </classes>
    <content>
        <textNode/>
    </content>
    <attList>
        <attDef ident="ref" mode="replace">
            <desc xml:lang="de" versionDate="2023-03-28">Verknüpfung des Ortes mit der ID der
                Ortsdatenbank.
            </desc>
            <desc xml:lang="en" versionDate="2023-03-28">Linking the place with the ID of the
                database of places.
            </desc>
            <desc xml:lang="fr" versionDate="2023-03-28">Relier le lieu à l'ID de la base de données
                des lieux.
            </desc>
            <desc xml:lang="it" versionDate="2023-03-28">Associazione del luogo con l'ID del database dei luoghi.
            </desc>
            <datatype>
                <dataRef key="ssrq.pointer.places"/>
            </datatype>
        </attDef>
    </attList>
    <exemplum xml:lang="de" versionDate="2023-07-11">
        <p>Beispielhafte Erfassung des Städtenamens eines Archivs</p>
        <egXML xmlns="http://www.tei-c.org/ns/Examples">
            <msIdentifier>
                <repository xml:lang="de">Staatsarchiv
                    <settlement ref="loc000082">St. Gallen</settlement>
                </repository>
                <idno xml:lang="de">StASG AA 2 B 001a, fol. 1r–5r</idno>
            </msIdentifier>
        </egXML>
    </exemplum>
    <exemplum xml:lang="fr" versionDate="2023-07-11">
        <p>Exemple de saisie du nom de la ville d'une archive</p>
        <egXML xmlns="http://www.tei-c.org/ns/Examples">
            <msIdentifier>
                <repository xml:lang="fr">Archives de l’État de
                    <settlement ref="loc000284">Fribourg</settlement>
                </repository>
                <idno xml:lang="de">StAFR, Thurnrodel 2, fol. 15r–16v</idno>
            </msIdentifier>
        </egXML>
    </exemplum>
</elementSpec>