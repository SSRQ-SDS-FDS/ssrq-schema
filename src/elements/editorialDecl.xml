<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="http://jenkins.tei-c.org/job/TEIP5-dev/lastSuccessfulBuild/artifact/P5/release/xml/tei/odd/p5.nvdl"
        type="application/xml"
        schematypens="http://purl.oclc.org/dsdl/nvdl/ns/structure/1.0"?>
<elementSpec xmlns="http://www.tei-c.org/ns/1.0" xmlns:sch="http://purl.oclc.org/dsdl/schematron" ident="editorialDecl" module="header" mode="change">
  <desc xml:lang="de" versionDate="2023-07-17">Enthält einen Link zu den Transkriptionsrichtlinien.</desc>
  <desc xml:lang="en" versionDate="2023-07-17">Includes a link to the transcription guidelines.</desc>
  <desc xml:lang="fr" versionDate="2023-07-17">Inclut un lien vers les directives de transcription.</desc>
  <desc xml:lang="it" versionDate="2023-07-17">Include un collegamento alle linee guida per la trascrizione.</desc>
  <classes mode="replace">
    <memberOf key="model.encodingDescPart"/>
  </classes>
  <content>
    <elementRef key="p"/>
  </content>
  <constraintSpec scheme="schematron" ident="sch-el-editorialDecl">
    <desc xml:lang="en" versionDate="2023-08-01">Constraint for tei:editorialDecl content</desc>
    <constraint>
      <sch:pattern>
        <sch:rule context="tei:editorialDecl">
          <sch:assert test="./tei:p/tei:ref">
            The <sch:name/> must contain a paragraph with a link.
          </sch:assert>
          <sch:assert test="./tei:p/tei:ref[@target='https://schema.ssrq-sds-fds.ch/latest/base/transcription']">
            The link inside <sch:name/> must point to the latest transcription guidelines:
            &lt;p&gt;&lt;ref target="https://schema.ssrq-sds-fds.ch/latest/base/transcription"/&gt;&lt;/p&gt;.
          </sch:assert>
        </sch:rule>
      </sch:pattern>
    </constraint>
  </constraintSpec>
  <exemplum xml:lang="de" type="ssrq-doc-example" versionDate="2023-04-20">
    <p>Modellhafter Aufbau</p>
    <egXML xmlns="http://www.tei-c.org/ns/Examples">
      <editorialDecl>
        <p>
          <ref target="https://www.ssrq-sds-fds.ch/wiki/Transkriptionsrichtlinien"/>
        </p>
      </editorialDecl>
    </egXML>
  </exemplum>
  <exemplum xml:lang="fr" type="ssrq-doc-example" versionDate="2023-04-20">
    <p>Structure modèle</p>
    <egXML xmlns="http://www.tei-c.org/ns/Examples">
      <editorialDecl>
        <p>
          <ref target="https://www.ssrq-sds-fds.ch/wiki/Transkriptionsrichtlinien"/>
        </p>
      </editorialDecl>
    </egXML>
  </exemplum>
</elementSpec>
