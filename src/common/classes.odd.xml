    <!-- Note / ToDo: Geprüft bis inklusive att.handFeatures; weitere Klassen überprüfen siehe: https://tei-c.org/release/doc/tei-p5-doc/en/html/REF-CLASSES-ATTS.html -->

    <specGrp xml:id="ssrq-classes">


        <classSpec ident="att.analytic" type="atts" mode="delete"/>
        <classSpec ident="att.cReferencing" type="atts" mode="delete"/>
        <classSpec ident="att.datable.iso" type="atts" mode="delete"/>
        <classSpec ident="att.datable.w3c" type="atts" mode="delete"/>
        <classSpec ident="att.datcat" type="atts" mode="delete"/>
        <classSpec ident="att.declaring" type="atts" mode="delete"/>
        <classSpec ident="att.fragmentable" type="atts" mode="delete"/>
        <classSpec ident="att.edition" type="atts" mode="delete"/>
        <classSpec ident="att.global.change" type="atts" mode="delete"/>
        <classSpec ident="att.global.linking" type="atts" mode="delete"/>
        <classSpec ident="att.global.source" type="atts" mode="delete"/>
        <classSpec ident="att.ranging" type="atts" mode="delete"/>
        <classSpec ident="att.sortable" type="atts" mode="delete"/>

        <classSpec ident="att.global" type="atts" mode="change">
            <classes mode="replace">
                <memberOf key="att.global.rendition"/>
                <memberOf key="att.global.responsibility"/>
            </classes>
            <attList>
                <attDef ident="xml:base" mode="delete"/>
                <attDef ident="xml:space" mode="delete"/>
            </attList>
        </classSpec>

        <classSpec ident="att.global.rendition" type="atts" mode="change">
            <attList>
                <attDef ident="style" mode="delete"/>
                <attDef ident="rendition" mode="delete"/>
            </attList>
        </classSpec>

        <classSpec ident="att.measurement" type="atts" mode="change">
            <attList>
                <attDef ident="unitRef" mode="delete"/>
            </attList>
        </classSpec>

        <classSpec ident="att.transcriptional" type="atts" mode="change">
            <attList>
                <attDef ident="cause" mode="delete"/>
                <attDef ident="seq" mode="delete"/>
                <attDef ident="status" mode="delete"/>
            </attList>
        </classSpec>

        <classSpec ident="att.damaged" type="atts" mode="change">
            <attList>
                <attDef ident="group" mode="delete"/>
            </attList>
        </classSpec>

        <classSpec ident="att.editLike" type="atts" mode="change">
            <attList>
                <attDef ident="evidence" mode="delete"/>
                <attDef ident="instant" mode="delete"/>
            </attList>
        </classSpec>

        <classSpec ident="att.typed" type="atts" mode="change">
            <attList>
                <attDef ident="subtype" mode="delete"/>
            </attList>
        </classSpec>

        <classSpec ident="att.tableDecoration" type="atts" mode="change">
            <attList>
                <attDef ident="cols" mode="delete"/>
                <attDef ident="rows" mode="delete"/>
            </attList>
        </classSpec>

        <classSpec ident="att.dimensions" type="atts" mode="change">
            <attList>
                <attDef ident="scope" mode="delete"/>
            </attList>
        </classSpec>

        <classSpec ident="att.pointing" type="atts" mode="change">
            <attList>
                <attDef ident="targetLang" mode="delete"/>
                <attDef ident="evaluate" mode="delete"/>
            </attList>
        </classSpec>


        <classSpec ident="att.handFeatures" type="atts" mode="change">
            <attList>
                <attDef ident="scribe" mode="replace">
                    <desc versionDate="2023-03-14" xml:lang="de">@scribe bezeichnet den Schreiber
                        oder die Hand. Ist der Schreiber namentlich genannt, enthält @scribe die
                        Identifikationsnummer der Person (perNNNNNNN), die in der Funktion als
                        Schreiber auftritt.</desc>
                    <desc versionDate="2023-03-14" xml:lang="fr">@scribe contient le numéro
                        d'identification d'une personne (perNNNNNNN) qui apparaît dans la fonction
                        du scribe. </desc>
                    <datatype>
                        <rng:choice>
                            <rng:ref name="ssrq.hand.scribe"/>
                            <rng:ref name="ssrq.pointer.persons"/>
                        </rng:choice>
                    </datatype>
                    <exemplum type="ssrq-doc-example" xml:lang="de" versionDate="2023-03-14">
                        <p>Normale Unterschrift</p>
                        <egXML xmlns="http://www.tei-c.org/ns/Examples">
                            <signed><handShift scribe="persID"/></signed>
                        </egXML>
                    </exemplum>
                    <exemplum type="ssrq-doc-example" xml:lang="fr" versionDate="2023-03-14">
                        <p>Signature normale</p>
                        <egXML xmlns="http://www.tei-c.org/ns/Examples">
                            <signed><handShift scribe="persID"/></signed>
                        </egXML>
                    </exemplum>
                </attDef>
                <attDef ident="medium" mode="replace">
                    <desc versionDate="2023-03-15" xml:lang="de">Verwendetes Schreibwerkzeug</desc>
                    <desc versionDate="2023-03-15" xml:lang="fr">Outils d'écriture utilisés</desc>
                    <desc versionDate="2023-03-15" xml:lang="en">Writing tool used</desc>
                    <valList type="closed">
                        <valItem ident="other ink">
                            <desc xml:lang="de" versionDate="2022-05-06">mit anderer Tinte</desc>
                            <desc xml:lang="fr" versionDate="2022-05-06">avec une autre encre</desc>
                            <desc xml:lang="it" versionDate="2022-09-05">altro inchiostro</desc>
                            <desc xml:lang="en" versionDate="2022-05-06">with different ink</desc>
                        </valItem>
                        <valItem ident="pencil">
                            <desc xml:lang="de" versionDate="2022-05-06">mit Bleistift</desc>
                            <desc xml:lang="fr" versionDate="2022-05-06">au crayon</desc>
                            <desc xml:lang="it" versionDate="2022-09-05">matita</desc>
                            <desc xml:lang="en" versionDate="2022-05-06">with pencil</desc>
                        </valItem>
                    </valList>
                </attDef>
                <attDef ident="scope" mode="delete"/>
                <attDef ident="scribeRef" mode="delete"/>
                <attDef ident="script" mode="delete"/>
                <attDef ident="scriptRef" mode="delete"/>
            </attList>
        </classSpec>

        <classSpec type="atts" ident="att.datable" mode="change">
            <attList>
                <attDef ident="calendar" mode="replace" usage="opt">
                    <desc xml:lang="de">verwendeter Kalender</desc>
                    <desc xml:lang="en">Calendar used</desc>
                    <desc xml:lang="fr">Calendrier utilisé</desc>
                    <desc xml:lang="it">Calendario utilizzato</desc>
                    <datatype>
                        <dataRef key="ssrq.date.calendar"/>
                    </datatype>
                    <!-- Prüfen: Kann das weg? -->
                    <constraintSpec scheme="schematron" ident="calendar" mode="replace">
                        <desc>Specific rules for @calendar</desc>
                        <constraint>
                            <sch:pattern>
                                <sch:rule context="tei:origDate[@calendar][ancestor::tei:teiHeader]">
                                    <sch:assert test=" string-length(.) = 0 or string-length(.) > 0"
                                        xml:lang="en">Text inside an <sch:name/> in the metadata
                                        section needs to have a length between 0-∞.</sch:assert>
                                </sch:rule>
                            </sch:pattern>
                        </constraint>
                    </constraintSpec>
                </attDef>
            </attList>
        </classSpec>



        <classSpec ident="ssrq.att.source" type="atts" mode="add" module="ssrq.core.module">

            <desc versionDate="2023-03-07" xml:lang="de">Stellt ein @source Attribut bereit, dessen
                Semantik dem der TEI entspricht.</desc>
            <desc versionDate="2023-03-07" xml:lang="en">Provides a common @source attribute
                semantically identical to the TEI @source.</desc>
            <constraintSpec scheme="schematron" ident="sch-att-source">
                <desc xml:lang="en" versionDate="2023-03-07">If source is used with tei:idno no
                    whitespace is allowed</desc>
                <constraint>
                    <sch:pattern>
                        <sch:rule context="tei:idno[@source]">
                            <sch:report test="matches(./@source, '\s')" xml:lang="en">When @source
                                is used together with <sch:name/> whitespace is not
                                allowed.</sch:report>
                        </sch:rule>
                    </sch:pattern>
                </constraint>
            </constraintSpec>
            <attList>
                <attDef ident="source" mode="add" usage="opt">
                    <gloss versionDate="2023-03-07" xml:lang="de">Quelle</gloss>
                    <desc versionDate="2023-03-07" xml:lang="de">Verweis auf ein anderes Stück
                        (bspw. im Falle der Mehrfachüberlieferung) oder auf ein
                        Archivinformationssystem.</desc>
                    <gloss versionDate="2023-03-07" xml:lang="en">source</gloss>
                    <desc versionDate="2023-03-07" xml:lang="en">Reference to another item (e.g. in
                        the case of multiple records) or to an archival information system.</desc>
                    <gloss versionDate="2023-03-07" xml:lang="fr">la source</gloss>
                    <desc versionDate="2023-03-07" xml:lang="fr">Renvoi à une autre pièce (par ex.
                        en cas de livraison multiple) ou à un système d'information
                        archivistique.</desc>
                    <datatype>
                        <rng:choice>
                            <rng:list>
                                <rng:oneOrMore>
                                    <rng:ref name="ssrq.pointer.urn"/>
                                </rng:oneOrMore>
                            </rng:list>
                            <rng:ref name="ssrq.pointer.url"/>
                        </rng:choice>
                    </datatype>

                </attDef>
            </attList>
            <exemplum type="ssrq-doc-example" xml:lang="de" versionDate="2023-03-03">
                <p>Lesung rekonstruiert durch eine andere Überlieferung</p>
                <egXML xmlns="http://www.tei-c.org/ns/Examples">
                    <p>Zum ersten soll <supplied source="urn:ssrq:SSRQ-SG-III_4-189-1">man wissen,
                            das</supplied> niemand </p>
                </egXML>
            </exemplum>
        </classSpec>

    </specGrp>

</div>
