        <classSpec ident="ssrq.att.source" type="atts" mode="add" module="ssrq.core.module">

            <desc versionDate="2023-03-07" xml:lang="de">Stellt ein @source Attribut bereit, dessen
                Semantik dem der TEI entspricht.</desc>
            <desc versionDate="2023-03-07" xml:lang="en">Provides a common @source attribute
                semantically identical to the TEI @source.</desc>
            <constraintSpec scheme="schematron" ident="sch-att-source">
                <desc xml:lang="en" versionDate="2023-03-07">If source is used with tei:idno no
                    whitespace is allowed</desc>
                <constraint>
                    <sch:pattern>
                        <sch:rule context="tei:idno[@source]">
                            <sch:report test="matches(./@source, '\s')" xml:lang="en">When @source
                                is used together with <sch:name/> whitespace is not
                                allowed.</sch:report>
                        </sch:rule>
                    </sch:pattern>
                </constraint>
            </constraintSpec>
            <attList>
                <attDef ident="source" mode="add" usage="opt">
                    <gloss versionDate="2023-03-07" xml:lang="de">Quelle</gloss>
                    <desc versionDate="2023-03-07" xml:lang="de">Verweis auf ein anderes Stück
                        (bspw. im Falle der Mehrfachüberlieferung) oder auf ein
                        Archivinformationssystem.</desc>
                    <gloss versionDate="2023-03-07" xml:lang="en">source</gloss>
                    <desc versionDate="2023-03-07" xml:lang="en">Reference to another item (e.g. in
                        the case of multiple records) or to an archival information system.</desc>
                    <gloss versionDate="2023-03-07" xml:lang="fr">la source</gloss>
                    <desc versionDate="2023-03-07" xml:lang="fr">Renvoi à une autre pièce (par ex.
                        en cas de livraison multiple) ou à un système d'information
                        archivistique.</desc>
                    <datatype>
                        <rng:choice>
                            <rng:list>
                                <rng:oneOrMore>
                                    <rng:ref name="ssrq.pointer.urn"/>
                                </rng:oneOrMore>
                            </rng:list>
                            <rng:ref name="ssrq.pointer.url"/>
                        </rng:choice>
                    </datatype>

                </attDef>
            </attList>
            <exemplum type="ssrq-doc-example" xml:lang="de" versionDate="2023-03-03">
                <p>Lesung rekonstruiert durch eine andere Überlieferung</p>
                <egXML xmlns="http://www.tei-c.org/ns/Examples">
                    <p>Zum ersten soll <supplied source="urn:ssrq:SSRQ-SG-III_4-189-1">man wissen,
                            das</supplied> niemand </p>
                </egXML>
            </exemplum>
        </classSpec>

