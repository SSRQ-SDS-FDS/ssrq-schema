<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="http://jenkins.tei-c.org/job/TEIP5-dev/lastSuccessfulBuild/artifact/P5/release/xml/tei/odd/p5.nvdl" type="application/xml" schematypens="http://purl.oclc.org/dsdl/nvdl/ns/structure/1.0"?>
<div xmlns="http://www.tei-c.org/ns/1.0" xmlns:rng="http://relaxng.org/ns/structure/1.0"
     xmlns:sch="http://purl.oclc.org/dsdl/schematron">

    <specGrp xml:id="ssrq-default-content-types">

        <macroSpec ident="ssrq.content.critical" mode="add" module="ssrq.core.module">
            <desc xml:lang="de" versionDate="2023-03-23">Textkritische Auszeichnungen</desc>
            <desc xml:lang="fr" versionDate="2023-03-23">Distinctions de la critique
                textuelle
            </desc>
            <content>
                <alternate>
                    <elementRef key="abbr"/>
                    <elementRef key="add"/>
                    <elementRef key="addSpan"/>
                    <elementRef key="app"/>
                    <elementRef key="corr"/>
                    <elementRef key="choice"/>
                    <elementRef key="damage"/>
                    <elementRef key="damageSpan"/>
                    <elementRef key="del"/>
                    <elementRef key="delSpan"/>
                    <elementRef key="foreign"/>
                    <elementRef key="gap"/>
                    <elementRef key="handShift"/>
                    <elementRef key="note"/>
                    <elementRef key="sic"/>
                    <elementRef key="space"/>
                    <elementRef key="subst"/>
                    <elementRef key="supplied"/>
                    <elementRef key="unclear"/>
                </alternate>
            </content>
        </macroSpec>

        <macroSpec ident="ssrq.content.display" mode="add" module="ssrq.core.module">
            <desc xml:lang="de" versionDate="2023-03-18">Auszeichnungen, die die Darstellung
                beschreiben / dieser dienen
            </desc>
            <content>
                <alternate>
                    <elementRef key="ab"/>
                    <elementRef key="cb"/>
                    <elementRef key="div"/>
                    <elementRef key="figure"/>
                    <elementRef key="fw"/>
                    <elementRef key="head"/>
                    <elementRef key="hi"/>
                    <elementRef key="lb"/>
                    <elementRef key="orig"/>
                    <elementRef key="p"/>
                    <elementRef key="pb"/>
                    <elementRef key="q"/>
                    <elementRef key="quote"/>
                    <elementRef key="seg"/>
                    <elementRef key="signed"/>
                    <elementRef key="table"/>
                </alternate>
            </content>
        </macroSpec>

        <macroSpec ident="ssrq.content.measure" module="ssrq.core.module">
            <desc xml:lang="de" versionDate="2023-03-23">Auszeichnung von Maßen und ähnlichen
                Dingen
            </desc>
            <desc xml:lang="fr" versionDate="2023-03-23">Distinction des mesures et choses
                similaires
            </desc>
            <content>
                <alternate>
                    <elementRef key="measure"/>
                    <elementRef key="measureGrp"/>
                </alternate>
            </content>
        </macroSpec>

        <macroSpec ident="ssrq.content.content" module="ssrq.core.module">
            <desc xml:lang="de" versionDate="2023-03-23">Inhaltliche Auszeichnung</desc>
            <desc xml:lang="fr" versionDate="2023-03-23">Distinction du contenu</desc>
            <content>
                <alternate>
                    <elementRef key="date"/>
                    <elementRef key="origDate"/>
                    <elementRef key="num"/>
                    <elementRef key="time"/>
                </alternate>
            </content>
        </macroSpec>

        <macroSpec ident="ssrq.content.entities" module="ssrq.core.module">
            <desc xml:lang="de" versionDate="2023-03-23">Auszeichnung von Personen, Orten,
                Organisationen etc.
            </desc>
            <desc xml:lang="fr" versionDate="2023-03-23">Distinction des personnes, lieux,
                organisations etc.
            </desc>
            <content>
                <alternate>
                    <elementRef key="persName"/>
                    <elementRef key="orgName"/>
                    <elementRef key="placeName"/>
                    <elementRef key="origPlace"/>
                    <elementRef key="term"/>
                </alternate>
            </content>
        </macroSpec>

        <macroSpec ident="ssrq.content.default" mode="add" module="ssrq.core.module">
            <content>
                <alternate>
                    <textNode/>
                    <macroRef key="ssrq.content.critical"/>
                    <macroRef key="ssrq.content.display"/>
                    <macroRef key="ssrq.content.measure"/>
                    <macroRef key="ssrq.content.content"/>
                    <macroRef key="ssrq.content.entities"/>
                </alternate>
            </content>
        </macroSpec>

    </specGrp>

</div>
